html,head,body
  padding:0
  margin:0
  background-color: #3B404C

body
  font-family: Futura, helvetica, arial, sans-serif

.drawing
  margin: auto;
  padding-top: calc((100vh - 80vmin)/2);
  padding-bottom: calc((100vh - 80vmin)/2);
  height: 80vmin;
  width: 80vmin;

.title
  position: absolute
  display: inline
  top: 1vh
  width: 100%
  text-align: center
  color: #e9e9e9


.controls
  position: absolute
  display: inline
  bottom: 1vh
  width: 100%
  text-align: center
  color: #e9e9e9
  height: 64px
  display: flex
  flex-direction: row
  align-items: center
  justify-content: center

.control
  padding: 20px
  border-bottom: 4px solid transparent

  &.selected
    border-bottom: 4px solid #aaaaaa

